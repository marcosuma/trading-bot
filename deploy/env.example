# Trading Bot Environment Configuration
# Copy this to /opt/trading-bot/.env and fill in your values
# IMPORTANT: Keep this file secure (chmod 600 .env)

# =============================================================================
# BROKER CONFIGURATION
# =============================================================================
# Supported: IBKR, OANDA, PEPPERSTONE, CTRADER
BROKER_TYPE=CTRADER

# -----------------------------------------------------------------------------
# cTrader Configuration (if BROKER_TYPE=CTRADER)
# -----------------------------------------------------------------------------
CTRADER_CLIENT_ID=your_client_id_here
CTRADER_CLIENT_SECRET=your_client_secret_here
CTRADER_ACCESS_TOKEN=your_access_token_here
CTRADER_ENVIRONMENT=DEMO
# CTRADER_ENVIRONMENT=LIVE

# -----------------------------------------------------------------------------
# IBKR Configuration (if BROKER_TYPE=IBKR)
# -----------------------------------------------------------------------------
# IBKR_HOST=127.0.0.1
# IBKR_PORT=7497
# IBKR_ACCOUNT_TYPE=PAPER

# -----------------------------------------------------------------------------
# OANDA Configuration (if BROKER_TYPE=OANDA)
# -----------------------------------------------------------------------------
# OANDA_API_KEY=your_api_key_here
# OANDA_ACCOUNT_ID=your_account_id_here
# OANDA_ENVIRONMENT=PRACTICE

# -----------------------------------------------------------------------------
# Pepperstone Configuration (if BROKER_TYPE=PEPPERSTONE)
# -----------------------------------------------------------------------------
# PEPPERSTONE_LOGIN=your_login
# PEPPERSTONE_PASSWORD=your_password
# PEPPERSTONE_SERVER=Pepperstone-Demo

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Option 1: Local MongoDB (installed on same server)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=trading_bot

# Option 2: MongoDB Atlas (recommended for production)
# MONGODB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
# MONGODB_DB_NAME=trading_bot

# Connection timeout (increase for Atlas)
MONGODB_CONNECT_TIMEOUT_MS=30000

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# SECURITY: Bind to localhost only (access via SSH tunnel)
API_HOST=127.0.0.1
API_PORT=8000

# Change this in production!
SECRET_KEY=change-me-to-a-random-string-in-production

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG

# Journal retention (days)
JOURNAL_RETENTION_DAYS=90

# =============================================================================
# RISK MANAGEMENT DEFAULTS
# =============================================================================
DEFAULT_STOP_LOSS_TYPE=ATR
DEFAULT_STOP_LOSS_VALUE=1.5
DEFAULT_TAKE_PROFIT_TYPE=RISK_REWARD
DEFAULT_TAKE_PROFIT_VALUE=2.0
DEFAULT_CRASH_RECOVERY_MODE=CLOSE_ALL
DEFAULT_EMERGENCY_STOP_LOSS_PCT=0.05
DEFAULT_DATA_RETENTION_BARS=1000

# =============================================================================
# OPTIONAL: REDIS (for Celery background tasks)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# OPTIONAL: GCP CONFIGURATION
# =============================================================================
# GCP_PROJECT_ID=your-project-id
# GCP_ZONE=us-central1-a
